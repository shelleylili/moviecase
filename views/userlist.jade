extends layout

block content
   .container
       .row
           h3.text-center user列表
           table.table.table-hover.table-bordered.text-center
               thead
                  tr
                    th.text-center 名字
                    th.text-center 时间
                    th.text-center 查看
                    th.text-center 更新
                    th.text-center 删除
               tbody
                   each item in users
                       tr(class="item-id-#{item._id}")
                        td #{item.name}
                        td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                        td: a(target="_blank",href="../movie/#{item._id}") 查看
                        td: a(target="_blank",href="../movie/update/#{item._id}") 修改
                        td
                            button.btn.btn-danger.btn-xs.del(type="button",data-id="#{item._id}") 删除
